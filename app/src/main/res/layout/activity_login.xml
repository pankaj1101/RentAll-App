<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="25sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rentall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Welcome to RentAll"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Please enter your address below to start using app."
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:background="@drawable/edittext_design"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="10dp"
            android:hint="Email..."
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="#707070" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:background="@drawable/edittext_design"
            android:drawableLeft="@drawable/padlock"
            android:drawablePadding="10dp"
            android:hint="Password..."
            android:inputType="textPassword"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textColorHint="#707070" />

        <TextView
            android:id="@+id/forgetp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Forget Password?"
            android:textAlignment="textEnd"
            android:textColor="#FF4626"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/login_button_design"
            android:padding="15dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Need new Account?"
            android:textAlignment="center"
            android:textColor="#000" />

        <Button
            android:id="@+id/needs_new_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/login_button_design"
            android:backgroundTint="#FF4626"
            android:padding="15dp"
            android:text="Sign Up Here"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>