<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Feedback">

    <ImageView
        android:id="@+id/images123"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/feedback_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/images123"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anything that can be Improved ?"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/feedbackbox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/text"
                android:background="@drawable/edittext_design"
                android:gravity="top|start"
                android:hint=" Your Feedback(Optional)"
                android:lines="8"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="#818181"
                android:textSize="20dp" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/feedbackbox"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_design"
                android:backgroundTint="@color/app_color"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <Button
                android:id="@+id/back_to_home"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/submenuarrow"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_design"
                android:backgroundTint="@color/app_color"
                android:text="Back to Home"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

