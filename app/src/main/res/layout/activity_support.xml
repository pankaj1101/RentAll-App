<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Support">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:src="@drawable/customer_support" />
        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:padding="20dp"
            android:text="Customer Support"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:padding="20dp"
            android:text="Email us on"
            android:textColor="#424242"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingStart="100dp"
            android:drawablePadding="30dp"
            android:drawableLeft="@drawable/mail"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bpankaj849@gmail.com"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#424242"
            />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:padding="20dp"
            android:text="Whatsapp Us on"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingStart="100dp"
            android:textColor="#424242"
            android:drawablePadding="30dp"
            android:drawableLeft="@drawable/whatsapp"
            />

        <TextView
            android:id="@+id/textView222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+919765128109"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#424242"
            />


    </LinearLayout>
</RelativeLayout>