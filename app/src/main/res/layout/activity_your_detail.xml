<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#f3f3f5"
    android:orientation="vertical"
    tools:context=".YourDetail">

    <TextView
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:text="Review Your Product"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/review"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@id/payment"
        android:backgroundTint="#f3f3f5"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/namefield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Mobile"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/mobilefield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/addressfield"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Pincode"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/productname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pricefiled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Adhar number"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/adhar_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="4dp"
                android:text="Pancard number"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/pancard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_design"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/app_color"
        android:text="Payment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>